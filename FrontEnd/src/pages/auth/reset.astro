---
import Layout from "../../layouts/Layout.astro";
import { readSession } from "../../lib/auth/session";

const session = readSession(Astro.cookies);
const token = Astro.url.searchParams.get("token") || "";
const error = Astro.url.searchParams.get("error") || "";
const message = Astro.url.searchParams.get("message") || "";
---

<Layout title="Set Password Baru" description="Reset password akun Mancafe" session={session}>
  <section class="mx-auto max-w-lg card p-6">
    <h1 class="text-2xl font-bold">Set Password Baru</h1>
    <p class="mt-2 text-sm text-[var(--text-secondary)]">Pastikan password baru kuat dan mudah diingat.</p>
    {error && <p class="mt-4 rounded-xl border border-red-200 bg-red-50 px-3 py-2 text-sm text-red-700">{error}</p>}
    {message && <p class="mt-4 rounded-xl border border-green-200 bg-green-50 px-3 py-2 text-sm text-green-700">{message}</p>}

    <form method="POST" action="/api/auth/reset" class="mt-5 space-y-3">
      <input type="hidden" name="token" value={token} />
      <label class="block text-sm">
        Password Baru
        <input class="field mt-1" type="password" name="new_password" required minlength="6" />
      </label>
      <button class="btn btn-primary w-full" type="submit">Simpan Password</button>
    </form>
  </section>
</Layout>
