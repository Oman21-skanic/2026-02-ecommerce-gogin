# App
PORT=8080
BASE_URL=http://localhost:8080

# Security (required)
JWT_SECRET=change-this-to-a-strong-random-secret
ADMIN_EMAIL=admin@example.com
ADMIN_PASSWORD=change-this-admin-password

# Storage backend: memory | mysql | postgres
STORE_BACKEND=mysql

# Required if STORE_BACKEND=mysql
MYSQL_DSN=root:your_password@tcp(127.0.0.1:3306)/ecommerce?parseTime=true&loc=Local&charset=utf8mb4

# Required if STORE_BACKEND=postgres
POSTGRES_DSN=host=localhost user=postgres password=postgres dbname=ecommerce port=5432 sslmode=disable TimeZone=Asia/Jakarta

# Midtrans (optional)
MIDTRANS_SERVER_KEY=
MIDTRANS_IS_PRODUCTION=false

# Email SMTP (optional, both must be set together)
SMTP_FROM=
SMTP_PASSWORD=
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
